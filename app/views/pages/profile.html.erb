<div class="container d-flex justify-content-center my-5">
  </div>
  <div class="row g-0 justify-content-center">
    <div class="col-lg-3 bg-white border-end">
      <div class="card border-0">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h5 class="card-title d-flex justify-content-center">Account Details</h5>
            <p class="card-text text-muted">
              <span class="fw-bold">Name: </span>
              <%= current_user.name %>
            </p>
            <p class="card-text text-muted">
              <span class="fw-bold">Email: </span>
              <%= current_user.email %>
            </p>
            <p class="card-text text-muted">
              <span class="fw-bold">Phone: </span>
              <%= current_user.phone %>
            </p>
          </li>
        </ul>
      </div>
    <div class="form-actions d-grid gap-2">
            <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
