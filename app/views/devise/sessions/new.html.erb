<div class="container d-flex justify-content-center">
  <div class="col-4">
    <br>
    <div class="d-flex justify-content-center">
    <h2>LOG IN</h2>
  </div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
    <div class="form-inputs text-center">
    <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: 'user@domain.com',
                input_html: { autocomplete: "email", class: 'bg-white text-center' } %>
    <%= f.input :password,
                required: false,
                placeholder: '*******',
                input_html: { autocomplete: "current-password", class: 'bg-white text-center' } %>
      <div class="d-flex justify-content-center">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-grid gap-2">
        <a class="d-flex justify-content-center" href="/users/password/new"> Forgot your password?</a>
        <%= f.button :submit, " Log in ", class: "btn btn-primary"%>
      </div>
      <% end %>
    </div>
    <br>
    <div class="d-flex justify-content-center">
      <p>Don't have an account?
      <a href="/users/sign_up" class="link-secondary">Sign up</a></p>
    </div>
  </div>
</div>
