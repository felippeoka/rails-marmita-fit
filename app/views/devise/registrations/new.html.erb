<div class="container d-flex justify-content-center">
  <div class="col-4">
<br>
<div class="d-flex justify-content-center">
<h2>SIGN UP</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: 'user@domain.com',
                input_html: { autocomplete: "email", class: 'bg-white' }%>
    <%= f.input :password,
                required: true,
                placeholder: '*******',
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: 'bg-white' } %>
    <%= f.input :password_confirmation,
                placeholder: '*******',
                required: true,
                input_html: { autocomplete: "new-password", class: 'bg-white' } %>
  </div>

  <div class="form-actions d-grid gap-2" >
    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
<br>
<div class="d-flex justify-content-center">
<p>Already have an acoount?</p>
</div>
<div class="d-flex justify-content-center">
<a href="/users/sign_in" class="btn btn-default btn-secondary">Log in</a>
</div>
</div>
</div>
